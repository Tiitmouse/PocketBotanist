<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_display_category">

        <SwitchPreferenceCompat
            app:key="dark_theme"
            app:summary="@string/settings_dark_theme_summary"
            app:title="@string/settings_dark_theme_title"
            app:defaultValue="false" />

        <ListPreference
            app:key="language"
            app:title="@string/settings_language_title"
            app:summary="@string/settings_language_summary"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:defaultValue="en" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_notifications_category">

        <SwitchPreferenceCompat
            app:key="water_reminder"
            app:summary="@string/settings_water_reminder_summary"
            app:title="@string/settings_water_reminder_title"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="sunlight_reminder"
            app:summary="@string/settings_sunlight_reminder_summary"
            app:title="@string/settings_sunlight_reminder_title"
            app:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>